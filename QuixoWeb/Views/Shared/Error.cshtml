@model QuixoWeb.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <h1 class="text-danger">
        <i class="fas fa-exclamation-triangle"></i> Error
    </h1>
    <h2 class="text-danger">Ocurrió un error al procesar tu solicitud.</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="alert alert-warning mt-4">
        <h4>¿Qué puedes hacer?</h4>
        <ul class="text-start">
            <li>Verifica tu conexión a internet</li>
            <li>Recarga la página</li>
            <li>Vuelve al inicio y prueba nuevamente</li>
        </ul>
    </div>

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-3">
        <i class="fas fa-home"></i> Volver al Inicio
    </a>
</div>