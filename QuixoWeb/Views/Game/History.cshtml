@model List<QuixoWeb.Models.Partida>
@{
    ViewData["Title"] = "Historial de Partidas";
}

<div class="container">
    <h2 class="mb-4">
        <i class="fas fa-history"></i> Historial de Partidas Finalizadas
    </h2>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-3x mb-3"></i>
            <h4>No hay partidas finalizadas</h4>
            <p>Juega tu primera partida para ver el historial aquí.</p>
            <a asp-action="SelectMode" class="btn btn-primary">
                <i class="fas fa-play"></i> Jugar Ahora
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Modo</th>
                        <th>Fecha y Hora</th>
                        <th>Tiempo</th>
                        <th>Ganador</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var partida in Model)
                    {
                        var ganador = partida.ModoJuego == 2 
                            ? (partida.GanadorId == 1 ? "Jugador 1" : "Jugador 2")
                            : (partida.EquipoGanador == "A" ? "Equipo A" : "Equipo B");
                        
                        <tr>
                            <td>@partida.PartidaId</td>
                            <td>
                                <span class="badge bg-info">
                                    @partida.ModoJuego Jugadores
                                </span>
                            </td>
                            <td>@partida.FechaHoraCreacion.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>@partida.TiempoTranscurrido.ToString(@"hh\:mm\:ss")</td>
                            <td>
                                <span class="badge bg-success">@ganador</span>
                            </td>
                            <td>
                                <a asp-action="ViewHistory" asp-route-id="@partida.PartidaId" 
                                   class="btn btn-sm btn-primary" title="Ver Historial">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Export" asp-route-id="@partida.PartidaId" 
                                   class="btn btn-sm btn-success" title="Exportar XML">
                                    <i class="fas fa-download"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver al Inicio
        </a>
    </div>
</div>