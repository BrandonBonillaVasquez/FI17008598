@{
    ViewData["Title"] = "Seleccionar Modo de Juego";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2 class="text-center mb-5">
                <i class="fas fa-gamepad"></i> Selecciona el Modo de Juego
            </h2>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card mode-card shadow-lg h-100">
                        <div class="card-body text-center p-5">
                            <div class="mode-icon mb-4">
                                <i class="fas fa-user-friends fa-5x text-primary"></i>
                            </div>
                            <h3 class="card-title mb-3">2 Jugadores</h3>
                            <p class="card-text text-muted mb-4">
                                Modo clásico uno contra uno. El jugador 1 usa círculos (O)
                                y el jugador 2 usa cruces (X).
                            </p>
                            <ul class="list-unstyled mb-4 text-start">
                                <li><i class="fas fa-check text-success"></i> Partida rápida</li>
                                <li><i class="fas fa-check text-success"></i> Estrategia directa</li>
                                <li><i class="fas fa-check text-success"></i> Perfecto para principiantes</li>
                            </ul>
                            <form asp-action="NewGame" method="post">
                                <input type="hidden" name="modoJuego" value="2" />
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-play"></i> Iniciar Partida
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card mode-card shadow-lg h-100">
                        <div class="card-body text-center p-5">
                            <div class="mode-icon mb-4">
                                <i class="fas fa-users fa-5x text-success"></i>
                            </div>
                            <h3 class="card-title mb-3">4 Jugadores</h3>
                            <p class="card-text text-muted mb-4">
                                Modo por equipos. Equipo A (jugadores 1 y 3) contra
                                Equipo B (jugadores 2 y 4).
                            </p>
                            <ul class="list-unstyled mb-4 text-start">
                                <li><i class="fas fa-check text-success"></i> Juego en equipo</li>
                                <li><i class="fas fa-check text-success"></i> Mayor complejidad</li>
                                <li><i class="fas fa-check text-success"></i> Orientación de puntos</li>
                            </ul>
                            <form asp-action="NewGame" method="post">
                                <input type="hidden" name="modoJuego" value="4" />
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="fas fa-play"></i> Iniciar Partida
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Volver al Inicio
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .mode-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
        }

        .mode-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.2) !important;
        }

        .mode-icon {
            animation: float 3s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
    </style>
}