@model QuixoWeb.Models.ViewModels.StatsViewModel
@{
    ViewData["Title"] = "Estadísticas";
}

<div class="container">
    <h2 class="mb-4">
        <i class="fas fa-chart-bar"></i> Estadísticas de Quixo
    </h2>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-user-friends"></i> Modo 2 Jugadores</h5>
                </div>
                <div class="card-body">
                    @if (!Model.EstadisticasDosJugadores.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 
                            No hay estadísticas disponibles para este modo.
                        </div>
                    }
                    else
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Jugador</th>
                                    <th class="text-center">Efectividad</th>
                                    <th class="text-center">Ganadas</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stat in Model.EstadisticasDosJugadores)
                                {
                                    <tr>
                                        <td>
                                            <strong>@stat.Nombre</strong>
                                        </td>
                                        <td class="text-center">
                                            <div class="progress" style="height: 25px;">
                                                <div class="progress-bar @(stat.Efectividad >= 50 ? "bg-success" : "bg-warning")" 
                                                     role="progressbar" 
                                                     style="width: @stat.Efectividad%"
                                                     aria-valuenow="@stat.Efectividad" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    @stat.Efectividad.ToString("F1")%
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-info fs-6">@stat.Ganadas</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        
                        <div class="text-center mt-4">
                            <canvas id="chart2Players" width="300" height="300"></canvas>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5><i class="fas fa-users"></i> Modo 4 Jugadores</h5>
                </div>
                <div class="card-body">
                    @if (!Model.EstadisticasCuatroJugadores.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 
                            No hay estadísticas disponibles para este modo.
                        </div>
                    }
                    else
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Equipo</th>
                                    <th class="text-center">Efectividad</th>
                                    <th class="text-center">Ganadas</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stat in Model.EstadisticasCuatroJugadores)
                                {
                                    <tr>
                                        <td>
                                            <strong>@stat.Nombre</strong>
                                        </td>
                                        <td class="text-center">
                                            <div class="progress" style="height: 25px;">
                                                <div class="progress-bar @(stat.Efectividad >= 50 ? "bg-success" : "bg-warning")" 
                                                     role="progressbar" 
                                                     style="width: @stat.Efectividad%"
                                                     aria-valuenow="@stat.Efectividad" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    @stat.Efectividad.ToString("F1")%
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-info fs-6">@stat.Ganadas</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        
                        <div class="text-center mt-4">
                            <canvas id="chart4Players" width="300" height="300"></canvas>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5><i class="fas fa-trophy"></i> Resumen General</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="stat-box">
                                <i class="fas fa-gamepad fa-3x text-primary mb-2"></i>
                                <h3>@Model.TotalPartidas</h3>
                                <p class="text-muted">Total Partidas</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-box">
                                <i class="fas fa-users fa-3x text-info mb-2"></i>
                                <h3>@Model.PartidasDosJugadores</h3>
                                <p class="text-muted">Modo 2 Jugadores</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-box">
                                <i class="fas fa-user-friends fa-3x text-success mb-2"></i>
                                <h3>@Model.PartidasCuatroJugadores</h3>
                                <p class="text-muted">Modo 4 Jugadores</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-box">
                                <i class="fas fa-clock fa-3x text-warning mb-2"></i>
                                <h3>
                                    @if (Model.TiempoPromedioTotal.TotalSeconds > 0)
                                    {
                                        @Model.TiempoPromedioTotal.ToString(@"mm\:ss")
                                    }
                                    else
                                    {
                                        <text>00:00</text>
                                    }
                                </h3>
                                <p class="text-muted">Tiempo Promedio</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver al Inicio
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        @if (Model.EstadisticasDosJugadores.Any())
        {
            <text>
            const data2Players = {
                labels: [@Html.Raw(string.Join(",", Model.EstadisticasDosJugadores.Select(s => $"'{s.Nombre}'")))],
                datasets: [{
                    data: [@Html.Raw(string.Join(",", Model.EstadisticasDosJugadores.Select(s => s.Ganadas)))],
                    backgroundColor: ['#0d6efd', '#dc3545']
                }]
            };
            
            
            </text>
        }
        
        @if (Model.EstadisticasCuatroJugadores.Any())
        {
            <text>
            const data4Players = {
                labels: [@Html.Raw(string.Join(",", Model.EstadisticasCuatroJugadores.Select(s => $"'{s.Nombre}'")))],
                datasets: [{
                    data: [@Html.Raw(string.Join(",", Model.EstadisticasCuatroJugadores.Select(s => s.Ganadas)))],
                    backgroundColor: ['#198754', '#ffc107']
                }]
            };
            
            
            </text>
        }
    </script>
}